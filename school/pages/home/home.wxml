    autoplay="true" interval="5000" duration="3000" indicator-active-color='red' circular="true">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>
</view>
<image src="/image/grower.jpg" class='ig'></image>
<view class='con'>
