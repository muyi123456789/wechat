/* pages/home/home.wxss */
page{
  height: 100%;
}
.banner{
  height: 40%;
  position: relative;
}
.banner swiper{
  height: 100%;
  width: 100%;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.ig{
  position: absolute;
  width: 100%;
  height: 54%;
  top: 46%;
  z-index: -1;
  opacity: 0.3;
}
.con{
  width: 100%; 
  height: 60%;
  border-top: 1px solid #c2c2c2;
}
.con .left{
  float: left;
  width: 39%;
  height: 100%;
  font-size: 0.8rem;
  border-right: 0.2rem solid #c2c2c2;
}
.con .left .title{
  height: 10%;
  width: 100%;
  text-align: center;
  border-bottom: 1px solid #c2c2c2;


}
.con .left .title span{
  display: inline-block;
  margin: 3% auto;
}
.con .right{
  float: right;
  width: 60%;
  height: 100%;
  font-size: 0.8rem
}
.con .right .title{
  height: 10%;
  width: 100%;
  text-align: center;
  border-bottom: 1px solid #c2c2c2;
}
.con .right .title span{
  display: inline-block;
  margin: 2% auto;
}
.sug-view{
  height: 90%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.sug{
  width:90%;
  height: 90%;
}
